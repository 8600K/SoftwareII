<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="800.0" prefWidth="512.0" style="-fx-background-color: indigo;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.AddCustomerController">
   <children>
      <AnchorPane layoutX="139.0" layoutY="173.0" prefHeight="454.0" prefWidth="266.0">
         <children>
            <TextField fx:id="nameField" layoutX="71.0" layoutY="3.0" />
            <Label fx:id="name" text="Name" textFill="WHITE">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <TextField fx:id="addressField" layoutX="71.0" layoutY="90.0" />
            <Label fx:id="address" layoutX="-9.0" layoutY="88.0" text="Address" textFill="WHITE">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <TextField fx:id="postalField" layoutX="71.0" layoutY="175.0" />
            <Label fx:id="postalCode" layoutX="-39.0" layoutY="173.0" text="Postal Code" textFill="WHITE">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <TextField fx:id="phoneField" layoutX="71.0" layoutY="267.0" />
            <ComboBox fx:id="countryComboBox" layoutX="71.0" layoutY="352.0" onAction="#countryHasData" prefWidth="150.0" />
            <Label fx:id="countryLabel" layoutX="-9.0" layoutY="350.0" text="Country" textFill="WHITE">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <ComboBox fx:id="divisionComboBox" layoutX="70.0" layoutY="430.0" prefWidth="150.0" visible="false" />
            <Label fx:id="stateProvinceLbl" layoutX="-64.0" layoutY="428.0" text="State/Province" textFill="WHITE" visible="false">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <Label fx:id="phoneNumber" layoutX="-67.0" layoutY="265.0" text="Phone Number" textFill="WHITE">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
      <Label fx:id="addCustomerLabel" layoutX="166.0" layoutY="24.0" text="Add Customer" textFill="WHITE">
         <font>
            <Font size="27.0" />
         </font>
      </Label>
      <Button fx:id="addCustomerButton" layoutX="249.0" layoutY="649.0" mnemonicParsing="false" onAction="#dataValidation" text="Add Customer">
         <font>
            <Font size="15.0" />
         </font>
      </Button>
      <Button fx:id="cancel" layoutX="185.0" layoutY="649.0" mnemonicParsing="false" onAction="#goBackToCustomers" text="Cancel">
         <font>
            <Font size="15.0" />
         </font>
      </Button>
      <Button graphicTextGap="2.0" layoutX="461.0" layoutY="22.0" mnemonicParsing="false" onAction="#exitTheProgram" prefHeight="26.0" prefWidth="51.0" style="-fx-background-color: indigo;" text="X" textAlignment="CENTER" textFill="WHITE">
         <font>
            <Font size="20.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <Label fx:id="minimizeLbl" layoutX="440.0" layoutY="14.0" onMouseClicked="#minimize" text="-" textFill="WHITE">
         <font>
            <Font size="41.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Label>
      <TextField fx:id="id" disable="true" layoutX="210.0" layoutY="96.0" />
      <Label fx:id="name1" layoutX="139.0" layoutY="93.0" text="ID" textFill="WHITE">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
